@model IEnumerable<Web_ban_giay.Models.GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutChung.cshtml";
}

<br />
<br />
<table class="table-hover table-bordered divGioHang">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Ảnh bìa
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Thành tiền
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                <img src=@Url.Content("~/assets/image/" +item.AnhBia.ToString()) alt="" width="50" height="50">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @maSP = item.MaSP }))
            {
                <td>
                    @Html.TextBox("txtSoLuong", item.SoLuong)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>
                <td>
                    <input type="submit" value="Cập nhật" class="btn-secondary" /> |
                    @Html.ActionLink("Delete", "xoaGioHang", new { @maSP = item.MaSP })
                </td>
            }


        </tr>
    }

</table>

<style type="text/css">
    .divGioHang {
        border-collapse: collapse;
        width: 80%;
        margin: 20px auto;
        font-size: 16px;
    }

        .divGioHang th,
        .divGioHang td {
            padding: 12px;
            border: 2px solid #ddd;
            text-align: center;
        }

        .divGioHang th {
            background-color: #f2f2f2;
        }

        .divGioHang img {
            max-width: 100%;
            height: auto;
        }

        .divGioHang td:last-child {
            white-space: nowrap;
        }

        .divGioHang a {
            text-decoration: none;
            margin: 0 5px;
            padding: 3px 8px;
            color: #333;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .divGioHang a:hover {
                background-color: #ddd;
            }
</style>
