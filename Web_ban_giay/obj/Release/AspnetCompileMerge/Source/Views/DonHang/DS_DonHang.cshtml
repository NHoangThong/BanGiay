@model IEnumerable<Web_ban_giay.DONHANG>

@{
    ViewBag.Title = "DS_DonHang";
    Layout = "~/Views/Shared/_LayoutChung.cshtml";
}



<div class="table-responsive mt-4 ">
    <h2 class="text-center">Danh Sách Đơn Hàng</h2>
    <table class="table table-hover table-bordered divGioHang">

        <thead>
            <tr >
                <th colspan="5" style="font-size:30px">
                    Danh Sách Đơn Hàng
                </th>
            </tr>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Tên người dùng</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MADH)</td>
                    <td>@Html.DisplayFor(modelItem => item.NGAYDATHANG)</td>
                    <td>@Html.DisplayFor(modelItem => item.TONGTIEN)</td>
                    <td>@Html.DisplayFor(modelItem => item.NGUOIDUNG.TENNGUOIDUNG)</td>
                    <td>
                        <div class="btn-group" role="group">

                            @Html.ActionLink("Delete", "xoaDH", new { @maDH = item.MADH }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

